<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ThongKeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarThongKe"
        app:title="Thống kê"
        app:navigationIcon="@drawable/arrow_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="vertical"
                android:background="#80FFDB7E"
                android:layout_width="match_parent"
                android:layout_height="600dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Ngành"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:text="Hồ sơ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <View
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0.55dp" />

                <ListView
                    android:divider="@null"
                    android:id="@+id/lvThongKeHoSo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF5C00"
                android:text="Tổng hồ sơ :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtvTongHoSo"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_alignParentRight="true"
                android:text="Tổng hồ sơ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>