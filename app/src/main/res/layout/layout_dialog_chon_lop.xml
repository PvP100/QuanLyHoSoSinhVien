<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_conner"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@drawable/bg_txtv_dialog"/>

    <Spinner
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        android:id="@+id/spinner_pick_nganh_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        android:id="@+id/spinner_pick_khoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        android:id="@+id/spinner_pick_lop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnHuyDialogLop"
            android:backgroundTint="#8A8A8A"
            android:text="Hủy"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnOkLop"
            android:textColor="@color/black"
            android:text="OK"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>