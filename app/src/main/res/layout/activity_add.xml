<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.AddActivity">

    <androidx.appcompat.widget.Toolbar
        app:navigationIcon="@drawable/arrow_left_color"
        android:id="@+id/toolbarAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <EditText
                android:padding="10dp"
                android:maxLength="2"
                android:layout_marginTop="10dp"
                android:id="@+id/edtKhoaAdd"
                android:inputType="number"
                android:hint="Khóa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtHoTenAdd"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="Họ và tên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:maxLength="10"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtGioiTinhAdd"
                android:hint="Giới tính"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:maxLength="10"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtSDTAdd"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="number"
                android:maxLength="12"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtCMTNDAdd"
                android:hint="CMTND (Cá nhân)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="Ngày cấp"
                android:id="@+id/edtNgayCapAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtNoiCapAdd"
                android:hint="Nơi cấp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:focusable="false"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtNgaySinhAdd"
                android:hint="Ngày sinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Spinner
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:spinnerMode="dialog"
                android:id="@+id/spinnerAddNganh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtHKTTAdd"
                android:hint="Hộ khẩu thường trú"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtDanTocAdd"
                android:hint="Dân tộc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtQuocTichAdd"
                android:hint="Quốc tịch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtNoiSinhAdd"
                android:hint="Nơi sinh "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edtDoiTuongAdd"
                android:hint="Đối tượng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="addSinhVien"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_information"
                android:layout_gravity="center"
                android:text="Thêm"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/btn_add"
                android:layout_width="302dp"
                android:layout_height="43dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>